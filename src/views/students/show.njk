{% extends "layout.njk" %}

{% block content %}

    <div class="card">
        <section class="avatar" style="background: url({{student.avatar_url}}) no-repeat center center / cover"></section>
        <section class="details">
            <div class="item">
                <div>Nome Completo</div>
                <div>{{ student.name }}</div>
            </div>
            <div class="item">
                <div>Aniversário</div>
                <div>{{ student.birth }}</div>
            </div>
            <div class="item">
                <div>Email</div>
                <div>{{ student.email }}</div>
            </div>
            <div class="item">
                <div>Ano escolar</div>
                <div>{{ student.educational_level }}</div>
            </div>
            <div class="item">
                <div>Carga horária semanal</div>
                <div>{{ student.courseload }}</div>
            </div>
            <div class="item">
                <a href="/students/{{ student.id}}/edit" class="button">Editar</a>
            </div>
        </section>
    </div>

{% endblock content %}