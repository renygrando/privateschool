{% extends "layout.njk" %}

{% block content %}

    <div class="card table-container">
    
    <div class="create-new-data">
        <a href="teachers/create">Cadastrar</a>
    </div>

        <table width="100%">
            <thead>
                <tr>
                    <th>Nome do Professor</th>
                    <th>Acompanhamento</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for teacher in teachers %}
                <tr>
                    <td>
                        <span style="background-image: url({{ teacher.avatar_url }})"></span> 
                        {{ teacher.name }}
                    </td>
                    <td>
                        <span class="item-matter">{{ teacher.matter }}</span>
                    </td>
                    <td>
                        <a href="/teachers/{{ teacher.id }}"> Ver </a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>

    </div>

{% endblock content %}