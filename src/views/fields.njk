<div class="item">
    <div>Avatar URL</div>
    <div>
        <input type="url" name="avatar_url" placeholder="http://" value="{{ teacher.avatar_url }}">
    </div>
</div>
<div class="item">
    <div>Nome Completo</div>
    <div>
        <input type="text" name="name" placeholder="''João da Silva''" value="{{ teacher.name }}">
    </div>
</div>
<div class="item">
    <div>Data de nascimento</div>
    <div>
        <input type="date" name="birth" value="{{ teacher.birth }}">
    </div>
</div>
<div class="item">
    <div>Grau de escolaridade</div>
    <div>
        <select name="educational_level">
            <option value="0"></option>
            <option value="1" {% if teacher.educational_level=="1" %} selected="selected" {% endif %}>Ensino Médio Completo</option>
            <option value="2" {% if teacher.educational_level=="2" %} selected="selected" {% endif %}>Ensino Superior Completo</option>
            <option value="3" {% if teacher.educational_level=="3" %} selected="selected" {% endif %}>Mestrado</option>
            <option value="4" {% if teacher.educational_level=="4" %} selected="selected" {% endif %}>Doutorado</option>
        </select>
    </div>
</div>
<div class="item">
    <div>Tipo de aula</div>
    <div>
        <span>
            <input type="radio" name="class_type" value="presential" {% if teacher.class_type=="presential" %} checked="checked" {% endif %}>
            Presencial
        </span>
        <span>
            <input type="radio" name="class_type" value="dist_learning" {% if teacher.class_type=="dist_learning" %} checked="checked" {% endif %}>
            À Distância
        </span>
    </div>
</div>
<div class="item">
    <div>Área de atuação</div>
    <div>
        <input type="text" name="matter" placeholder="Separe as matérias por vírgula" value="{{ teacher.matter }}">
    </div>
</div>