{% extends "layout.njk" %}

{% block content %}

    <form class="card" action="/teachers" method="POST">
        <section class="avatar" style="background: url(https://source.unsplash.com/collection/8491653/500x500) no-repeat center center / cover"></section>
        <section class="details">
            <div class="item">
                <div>Avatar URL</div>
                <div>
                    <input type="url" name="avatar_url" placeholder="http://">
                </div>
            </div>
            <div class="item">
                <div>Nome Completo</div>
                <div>
                    <input type="text" name="name" placeholder="''João da Silva''">
                </div>
            </div>
            <div class="item">
                <div>Data de nascimento</div>
                <div>
                    <input type="date" name="birth">
                </div>
            </div>
            <div class="item">
                <div>Grau de escolaridade</div>
                <div>
                    <select name="educational_level">
                        <option value="0"></option>
                        <option value="1">Ensino Médio Completo</option>
                        <option value="2">Ensino Superior Completo</option>
                        <option value="3">Mestrado</option>
                        <option value="4">Doutorado</option>
                    </select>
                </div>
            </div>
            <div class="item">
                <div>Tipo de aula</div>
                <div>
                    <span><input type="radio" name="class_type" value="presential">Presencial</span>
                    <span><input type="radio" name="class_type" value="dist_learning">À Distância</span>
                </div>
            </div>
            <div class="item">
                <div>Área de atuação</div>
                <div>
                    <input type="text" name="matter" placeholder="Separe as matérias por vírgula">
                </div>
            </div>
            <div class="item">
                <div>
                    <button type="submit">Enviar</button>
                </div>
            </div>
        </section>
    </form>

{% endblock content %}