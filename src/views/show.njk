{% extends "layout.njk" %}

{% block content %}

    <div class="card">
        <section class="avatar" style="background: url({{teacher.avatar_url}}) no-repeat center center / cover"></section>
        <section class="details">
            <div class="item">
                <div>Nome Completo</div>
                <div>{{ teacher.name }}</div>
            </div>
            <div class="item">
                <div>Idade</div>
                <div>{{ teacher.age }}</div>
            </div>
            <div class="item">
                <div>Grau de Escolaridade</div>
                <div>{{ teacher.educational_level }}</div>
            </div>
            <div class="item">
                <div>Tipo de Aula</div>
                <div>{{ "Presencial" if teacher.class_type == "presential" else "Ensino à distância" }}</div>
            </div>
            <div class="item">
                <div>Acompanhamento</div>
                {% for mat in teacher.matter %}
                <span>{{ mat }}</span>
                {% endfor %}
            </div>
            <div class="item">
                <div>Desde</div>
                <div>{{ teacher.created_at }}</div>
            </div>
            <div class="item">
                <a href="#" class="button">Editar</a>
            </div>
        </section>
    </div>

{% endblock content %}